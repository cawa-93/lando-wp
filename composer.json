{
  "type": "project",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": ["wpackagist-plugin/*", "wpackagist-theme/*"]
    }
  ],
  "require": {
    "php": ">=8.1",
    "composer/installers": "^2.2",
    "vlucas/phpdotenv": "^5.5",
    "oscarotero/env": "^2.1",
    "roots/bedrock-autoloader": "^1.0",
    "roots/bedrock-disallow-indexing": "^2.0",
    "roots/wordpress": "^6.4",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.1.0",
    "roots/acorn": "^3.2",
    "wpackagist-plugin/wp-dummy-content-generator": "^3.1",
    "wpackagist-plugin/updraftplus": "^1.23",
    "wpackagist-plugin/svg-support": "^2.5",
    "wpackagist-plugin/cmb2": "^2.10",
    "log1x/sage-svg": "^1.1",
    "wpackagist-plugin/wordpress-seo": "^21.7",
    "wpackagist-plugin/contact-form-7": "^5.8",
    "wpackagist-plugin/smtp-amazon-ses": "^1.7",
    "wpackagist-plugin/webp-converter-for-media": "^5.11"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.8.0",
    "roave/security-advisories": "dev-latest"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin", "wpackagist-plugin/cmb2"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp",
    "acorn": {
      "providers": [
        "App\\Providers\\ThemeServiceProvider"
      ]
    }
  },
  "autoload": {
    "psr-4": {
      "App\\": "web/app/themes/your-theme-name/app/"
    }
  },
  "scripts": {
    "test": [
      "composer run lint"
    ],
    "lint": [
      "phpcs --standard=phpcs.xml"
    ],
    "lint:fix": [
      "phpcbf --standard=phpcs.xml"
    ],
    "post-autoload-dump": [
      "Roots\\Acorn\\ComposerScripts::postAutoloadDump"
    ]
  }
}
